---
import LogoImg from "@/assets/images/logo_white.webp";
import MobileMenuToggle from "@/components/mobile-menu-toggle.tsx";
import { Image } from "astro:assets";
import { navItems } from "@/utils/helper";

const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';

// JSON-LD structured data for organization and website
const organizationSchema = {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "Yann Metier - Développeur Web Freelance",
    "description": "Expert en création de sites internet avec tarification transparente. Devis gratuit et personnalisé pour votre projet web professionnel.",
    "url": "https://prix-site-internet.fr",
    "logo": "https://prix-site-internet.fr/logo.webp",
    "image": "https://prix-site-internet.fr/yann-metier-developer.webp",
    "telephone": "+33 7 52 04 07 71",
    "email": "metier.yann@gmail.com",
    "address": {
        "@type": "PostalAddress",
        "addressCountry": "FR",
        "addressRegion": "France"
    },
    "founder": {
        "@type": "Person",
        "name": "Yann Metier",
        "jobTitle": "Développeur Web Freelance",
        "description": "Développeur web expert freelance. Création de sites internet professionnels, applications web sur-mesure et solutions digitales optimisées.",
        "sameAs": [
            "https://www.linkedin.com/in/yann-metier-147706156/",
            "facebook"
        ]
    },
    "serviceType": "Développement Web",
    "areaServed": {
        "@type": "Country",
        "name": "France"
    },
    "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services de Développement Web",
        "itemListElement": [
            {
                "@type": "Offer",
                "itemOffered": {
                    "@type": "Service",
                    "name": "Création de Sites Internet",
                    "description": "Développement de sites web modernes, responsives et optimisés SEO"
                }
            },
            {
                "@type": "Offer",
                "itemOffered": {
                    "@type": "Service",
                    "name": "Applications Web Sur-Mesure",
                    "description": "Développement d'applications web métier personnalisées"
                }
            }
        ]
    }
};

const websiteSchema = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Yann Metier - Développeur Web Freelance",
    "url": "https://prix-site-internet.fr",
    "potentialAction": {
        "@type": "SearchAction",
        "target": "https://prix-site-internet.fr/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
    },
    "publisher": {
        "@type": "Organization",
        "name": "Prix Site Internet",
        "logo": "https://prix-site-internet.fr/logo.webp"
    }
};

---

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)}></script>
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>

<!-- Skip navigation for accessibility -->
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 z-[9999] bg-primary text-primary-foreground px-4 py-2 rounded-md">
    Aller au contenu principal
</a>

<header role="banner" class="sticky top-0 z-50">
    <nav
        class="bg-card/70 backdrop-blur-lg border-b border-border/20"
        role="navigation"
        aria-label="Navigation principale du site"
        itemscope
        itemtype="https://schema.org/SiteNavigationElement"
    >
        <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
            <div class="flex justify-between items-center h-20">

                <!-- Logo et informations business -->
                <div class="flex items-center">
                    <a
                        href="/"
                        class="flex items-center space-x-3"
                        title="Yann Metier, développeur web freelance spécialisé dans la création digitale"
                    >
                        <div class="w-12 h-12 bg-primary/90 organic-shape flex items-center justify-center shadow-xs shadow-black">
                            <Image
                                src={LogoImg}
                                width={32}
                                height={32}
                                alt="Logo Yann Metier Développeur Web - Symbole professionnel représentant l'expertise en développement"
                                loading="eager"
                            />
                        </div>
                        <span class="flex flex-col">
                            <span class=" font-bold text-xl text-foreground tracking-wide">
                                Yann Metier
                            </span>
                            <span class="text-xs text-muted-foreground font-medium">
                                Développeur web freelance
                            </span>
                        </span>
                    </a>
                </div>

                <!-- Navigation principale desktop -->
                <div class="hidden lg:flex items-center">
                    <ul class="flex items-center space-x-8 list-none m-0 p-0">
                        {navItems.map((item) => {
                            const normalizedHref = item.href.replace(/\/$/, '') || '/';
                            const isActive = currentPath === normalizedHref;
                            const itemId = `nav-${item.href.slice(1) || 'Accueil'}`;

                            return (
                                <li>
                                    <a
                                        id={itemId}
                                        href={item.href}
                                        title={item.title}
                                        target={item.target ? "_blank" : undefined}
                                        rel={item.target ? "noopener noreferrer" : undefined}
                                        class={`${item.target ? 'hover:opacity-80' : 'text-foreground/80 hover:text-primary'} transition-all duration-300 font-medium text-sm py-2 px-1  relative group focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-opacity-50 rounded-sm ${isActive ? 'text-primary' : ''}`}
                                        style={item.target ? 'color: #ff4676' : undefined}
                                        aria-current={isActive ? 'page' : undefined}
                                    >
                                        <span class="inline-flex items-center gap-1">
                                            {item.label}
                                            {item.target && (
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                                    <polyline points="15,3 21,3 21,9"/>
                                                    <line x1="10" y1="14" x2="21" y2="3"/>
                                                </svg>
                                            )}
                                        </span>
                                        <span class={`absolute -bottom-1 left-0 h-0.5 ${item.target ? '' : 'bg-primary'} transition-all duration-300 rounded-full ${isActive ? 'w-full' : 'w-0 group-hover:w-full'}`} style={item.target ? 'background-color: #ff4676' : undefined} aria-hidden="true"></span>
                                    </a>
                                </li>
                            )
                        })}

                        <!-- Call-to-Action principal -->
                        <li>
                            <a
                                href="/services"
                                class="inline-flex items-center bg-primary hover:bg-primary/90 text-primary-foreground rounded-lg px-4 py-2 shadow-lg hover:shadow-xl transition-all duration-200  hover:scale-[1.01] focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2"
                                title="Obtenir un devis gratuit pour votre projet web - Estimation prix site internet"
                            >
                                <svg width="18" height="18" class="mr-1.5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                </svg>
                                <span>Obtenir un devis</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Menu mobile avec amélioration SEO -->
                <div class="lg:hidden relative" role="navigation" aria-label="Menu de navigation mobile">
                    <MobileMenuToggle
                        client:visible
                        navItems={navItems.map(item => ({
                            href: item.href,
                            label: item.label,
                            title: item.title,
                            target: item.target
                        }))}
                    />
                </div>
            </div>
        </div>
    </nav>
</header>
