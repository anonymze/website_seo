---
import Footer from "@/layouts/footer.astro";
import Navigation from "@/layouts/navigation.astro";
import "../styles/global.css";

export interface Props {
    title: string;
    description: string;
    keywords: string;
    type?: string;
}

const { title, description, keywords, type = "website" } = Astro.props;
---

<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content="Expert Création Sites Web" />
        <meta name="robots" content="index, follow" />
        <link rel="canonical" href={`https://prix-site-internet.fr${Astro.url.pathname}`} />

        <!-- Geographic targeting -->
        <meta name="geo.region" content="FR" />
        <meta name="geo.placename" content="France" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={type} />
        <meta property="og:url" content={`https://prix-site-internet.fr${Astro.url.pathname}`} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://prix-site-internet.fr/og.png"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta
            property="og:image:alt"
            content="Expert création site internet professionnel - Développement web sur-mesure"
        />
        <meta property="og:locale" content="fr_FR" />
        <meta
            property="og:site_name"
            content="Création Site Web Professionnel"
        />

        <!-- Additional SEO -->
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
    </head>
    <body>
        <Navigation />
        <main class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    .organic-shape {
        min-width: 3rem;
        border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
    }
</style>
