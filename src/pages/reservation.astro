---
import Layout from "@/layouts/layout.astro";

// Page SEO data
const pageData = {
    title: "Réservation - Charlotte Drouilly Kinésiologue",
    description: "Réservez facilement votre séance de kinésiologie avec Charlotte Drouilly. Prise de rendez-vous en ligne 24h/24.",
    keywords: "réservation kinésiologie, rendez-vous Charlotte Drouilly, séance kinésiologie France Suisse, prise rendez-vous en ligne"
};
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
    <main role="main">
        <!-- Hero Section -->
        <section
            class="pt-24 pb-4 bg-gradient-to-b from-card/60 to-background/30"
            aria-labelledby="hero-heading"
            role="banner"
        >
            <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16 text-center">
                <header class="mb-12">
                    <h1
                        id="hero-heading"
                        class="font-sans font-bold text-4xl md:text-5xl text-foreground mb-6 leading-tight"
                    >
                        Réservez votre séance
                    </h1>
                    <p class="text-muted-foreground text-xl max-w-3xl mx-auto leading-relaxed">
                        Prenez rendez-vous facilement en ligne pour votre
                        <strong>séance de kinésiologie</strong>
                    </p>
                </header>

                <!-- Important Notice -->
                <div class="max-w-3xl mx-auto">
                    <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 mb-8">
                        <div class="flex items-start space-x-3">
                            <svg
                                class="w-6 h-6 text-amber-600 flex-shrink-0 mt-0.5"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                aria-hidden="true"
                            >
                                <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/>
                                <path d="M12 9v4"/>
                                <path d="M12 17h.01"/>
                            </svg>
                            <div>
                                <h3 class="font-semibold text-amber-800 mb-2">
                                    Information importante
                                </h3>
                                <p class="text-amber-700 text-sm leading-relaxed">
                                    <strong>Attention :</strong> Les mutuelles françaises ne prennent pas en charge
                                    les consultations effectuées dans un cabinet situé en Suisse.
                                    Pour un remboursement mutuelle, privilégiez le cabinet français.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Calendly Section -->
        <section class="pb-20">
            <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
                <div class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg overflow-hidden">
                    <div class="aspect-[4/3] lg:aspect-[16/10]">
                        <iframe
                            src="https://calendly.com/charlotte-drouilly"
                            width="100%"
                            height="100%"
                            frameborder="0"
                            title="Calendrier de réservation Charlotte Drouilly"
                            aria-label="Interface de prise de rendez-vous en ligne pour les séances de kinésiologie"
                        ></iframe>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Screen reader only content */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
</style>
