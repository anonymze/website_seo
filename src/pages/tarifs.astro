---
import Layout from "@/layouts/layout.astro";

// Page SEO data
const pageData = {
    title: "Tarifs des séances de kinésiologie et massage thérapeutique",
    description:
        "Découvrez les tarifs transparents de Charlotte Drouilly, kinésiologue en Suisse. Séances de kinésiologie, massages bien-être et forfaits avantageux.",
    keywords:
        "tarifs kinésiologie Suisse, prix séance kinésiologie Genève, forfait massage thérapeutique, consultation kinésiologue prix Charlotte Drouilly",
};

// Services with dual pricing
const services = [
    {
        title: "Séance de Kinésiologie",
        duration: "1h30",
        priceFrance: "90 €",
        priceSuisse: "120 CHF",
        description:
            "Séance complète incluant bilan énergétique et rééquilibrage",
        features: [
            "Test musculaire approfondi",
            "Identification des déséquilibres",
            "Techniques de rééquilibrage",
            "Conseils personnalisés",
        ],
        icon: "heart",
    },
    {
        title: "Massage Bien-être",
        duration: "1h",
        priceFrance: "75 €",
        priceSuisse: "100 CHF",
        description: "Massage relaxant personnalisé selon vos besoins",
        features: [
            "Choix de la technique adaptée",
            "Huiles essentielles bio",
            "Ambiance zen et apaisante",
            "Moment de détente pure",
        ],
        icon: "leaf",
    },
    {
        title: "Accompagnement Holistique",
        duration: "2h",
        priceFrance: "135 €",
        priceSuisse: "180 CHF",
        description:
            "Séance combinée kinésiologie et massage pour un bien-être global",
        features: [
            "Approche corps-esprit complète",
            "Kinésiologie + massage",
            "Suivi personnalisé",
            "Plan de bien-être sur mesure",
        ],
        icon: "users",
    },
];

// Package deals
const packages = [
    {
        title: "Forfait Découverte",
        sessions: "3 séances",
        originalPrice: "360 CHF",
        price: "315 CHF",
        savings: "45 CHF d'économie",
        description: "Idéal pour commencer votre parcours bien-être",
        popular: false,
    },
    {
        title: "Forfait Équilibre",
        sessions: "5 séances",
        originalPrice: "600 CHF",
        price: "525 CHF",
        savings: "75 CHF d'économie",
        description: "Pour un accompagnement régulier et durable",
        popular: true,
    },
    {
        title: "Forfait Transformation",
        sessions: "10 séances",
        originalPrice: "1200 CHF",
        price: "1050 CHF",
        savings: "150 CHF d'économie",
        description: "Pour une transformation profonde et durable",
        popular: false,
    },
];

// Practical information
const paymentInfo = [
    "Espèces, chèque ou virement bancaire",
    "Paiement à la séance ou forfait",
    "Forfaits valables 6 mois",
    "Factures disponibles sur demande",
];

const cancellationInfo = [
    "Annulation gratuite 24h avant",
    "Séance due si annulation tardive",
    "Report possible selon disponibilités",
    "Remboursement forfait si force majeure",
];
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
    <main role="main">
        <!-- Hero Section -->
        <section
            class="py-24 bg-gradient-to-b from-card/60 to-background/30"
            aria-labelledby="hero-heading"
            role="banner"
        >
            <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
                <header class="text-center mb-12">
                    <h1
                        id="hero-heading"
                        class="font-sans font-bold text-4xl md:text-5xl text-foreground mb-6 leading-tight"
                    >
                        Tarifs et prestations
                    </h1>
                    <p
                        class="text-muted-foreground text-lg max-w-3xl mx-auto leading-relaxed"
                    >
                        Des <strong>tarifs transparents</strong> pour des accompagnements
                        de qualité en <strong>kinésiologie</strong>, adaptés à vos
                        besoins et votre budget
                    </p>
                </header>

                <!-- Important Notice -->
                <div class="max-w-3xl mx-auto">
                    <div class="bg-amber-50 border border-amber-200 rounded-2xl p-6 mb-8">
                        <div class="flex items-start space-x-3 text-center">
                            <svg
                                class="w-6 h-6 text-amber-600 flex-shrink-0 mt-0.5"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                aria-hidden="true"
                            >
                                <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/>
                                <path d="M12 9v4"/>
                                <path d="M12 17h.01"/>
                            </svg>
                            <div>
                                <h3 class="font-semibold text-amber-800 mb-2">
                                    Information importante
                                </h3>
                                <p class="text-amber-700 text-sm leading-relaxed">
                                    <strong>Attention :</strong> Les mutuelles françaises ne prennent pas en charge
                                    les consultations effectuées dans un cabinet situé en Suisse.
                                    Pour un remboursement mutuelle, privilégiez le cabinet français.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8" role="list">
                    {
                        services.map((service, index) => (
                            <article
                                class="border border-border/20 rounded-3xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 bg-card/60 backdrop-blur-lg"
                                role="listitem"
                                itemscope
                                itemtype="https://schema.org/Service"
                            >
                                <div class="p-8 text-center">
                                    <div class="w-16 h-16 bg-gradient-to-br from-primary/40 to-secondary/30 rounded-full flex items-center justify-center mx-auto mb-6">
                                        {service.icon === "heart" && (
                                            <svg
                                                class="w-8 h-8 text-primary"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-label="Icône kinésiologie"
                                            >
                                                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.29 1.51 4.04 3 5.5l7 7Z" />
                                            </svg>
                                        )}
                                        {service.icon === "leaf" && (
                                            <svg
                                                class="w-8 h-8 text-primary"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-label="Icône massage bien-être"
                                            >
                                                <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z" />
                                                <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12" />
                                            </svg>
                                        )}
                                        {service.icon === "users" && (
                                            <svg
                                                class="w-8 h-8 text-primary"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-label="Icône accompagnement holistique"
                                            >
                                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                                                <circle cx="9" cy="7" r="4" />
                                                <path d="m22 21-2-2" />
                                                <circle cx="16" cy="11" r="3" />
                                            </svg>
                                        )}
                                    </div>

                                    <h3
                                        class="font-sans font-bold text-xl text-foreground mb-4"
                                        itemprop="name"
                                    >
                                        {service.title}
                                    </h3>

                                    <div class="flex items-center justify-center space-x-6 text-muted-foreground mb-4">
                                        <div class="flex items-center">
                                            <svg
                                                class="w-4 h-4 mr-2"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <circle
                                                    cx="12"
                                                    cy="12"
                                                    r="10"
                                                />
                                                <polyline points="12,6 12,12 16,14" />
                                            </svg>
                                            <span class="text-sm">
                                                {service.duration}
                                            </span>
                                        </div>
                                        <div class="text-center">
                                            <div class="flex items-center justify-center space-x-3 mb-2">
                                                <div class="text-lg font-bold text-primary flex items-center">
                                                    🇫🇷 {service.priceFrance}
                                                </div>
                                                <div class="w-px h-6 bg-border"></div>
                                                <div class="text-lg font-bold text-primary flex items-center">
                                                    🇨🇭 {service.priceSuisse}
                                                </div>
                                            </div>
                                            <div class="text-xs text-muted-foreground">
                                                France • Suisse
                                            </div>
                                        </div>
                                    </div>

                                    <p
                                        class="text-muted-foreground text-center mb-6 leading-relaxed font-sans"
                                        itemprop="description"
                                    >
                                        {service.description}
                                    </p>

                                    <ul class="space-y-3 text-left" role="list">
                                        {service.features.map(
                                            (feature, featureIndex) => (
                                                <li
                                                    class="flex items-start text-sm text-muted-foreground"
                                                    role="listitem"
                                                >
                                                    <svg
                                                        class="w-4 h-4 text-primary mr-3 mt-0.5 flex-shrink-0"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        aria-hidden="true"
                                                    >
                                                        <path d="M20 6 9 17l-5-5" />
                                                    </svg>
                                                    {feature}
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Packages Section -->
        <section
            class="py-24 bg-gradient-to-b from-card/40 to-background/60"
            aria-labelledby="packages-heading"
        >
            <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-16">
                <header class="text-center mb-12">
                    <h2
                        id="info-heading"
                        class="font-sans font-bold text-3xl text-foreground mb-6 leading-tight"
                    >
                        Informations pratiques
                    </h2>
                </header>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <article
                        class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg"
                    >
                        <div class="p-8">
                            <h3
                                class="font-sans font-bold text-lg text-foreground mb-6 flex items-center"
                            >
                                <svg
                                    class="w-6 h-6 mr-3 text-primary"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    <rect
                                        width="20"
                                        height="14"
                                        x="2"
                                        y="5"
                                        rx="2"></rect>
                                    <line x1="2" x2="22" y1="10" y2="10"></line>
                                </svg>
                                Modalités de paiement
                            </h3>
                            <ul
                                class="space-y-3 text-muted-foreground"
                                role="list"
                            >
                                {
                                    paymentInfo.map((info, index) => (
                                        <li
                                            class="flex items-start"
                                            role="listitem"
                                        >
                                            <svg
                                                class="w-4 h-4 text-primary mr-3 mt-1 flex-shrink-0"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M20 6 9 17l-5-5" />
                                            </svg>
                                            {info}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </article>

                    <article
                        class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg"
                    >
                        <div class="p-8">
                            <h3
                                class="font-sans font-bold text-lg text-foreground mb-6 flex items-center"
                            >
                                <svg
                                    class="w-6 h-6 mr-3 text-primary"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    aria-hidden="true"
                                >
                                    <path d="M8 2v4"></path>
                                    <path d="M16 2v4"></path>
                                    <rect
                                        width="18"
                                        height="18"
                                        x="3"
                                        y="4"
                                        rx="2"></rect>
                                    <path d="M3 10h18"></path>
                                </svg>
                                Politique d'annulation
                            </h3>
                            <ul
                                class="space-y-3 text-muted-foreground"
                                role="list"
                            >
                                {
                                    cancellationInfo.map((info, index) => (
                                        <li
                                            class="flex items-start"
                                            role="listitem"
                                        >
                                            <svg
                                                class="w-4 h-4 text-primary mr-3 mt-1 flex-shrink-0"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M20 6 9 17l-5-5" />
                                            </svg>
                                            {info}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </article>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Screen reader only content */
    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }
</style>
