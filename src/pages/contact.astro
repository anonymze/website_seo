---
import Layout from "@/layouts/layout.astro";

// Page SEO data
const pageData = {
    title: "Contact - Yann Metier Création de Sites Web",
    description:
        "Contactez Yann Metier pour la création de votre site web. Développeur web professionnel basé en France.",
    keywords:
        "contact développeur web freelance, Yann Metier développeur, devis création site web, développeur web France, freelance sites internet professionnels",
};

// Contact information
const contactInfo = [
    {
        icon: "mail",
        title: "Email",
        value: "metier.yann@gmail.com",
        subtitle: "Réponse sous 24h en moyenne",
    },
    {
        icon: "phone",
        title: "Téléphone",
        value: "+33 7 52 04 07 71",
        subtitle: "Du lundi au dimanche",
    },
    {
        icon: "linkedin",
        title: "LinkedIn",
        value: "Yann Metier",
        subtitle: "Profil professionnel",
        url: "https://www.linkedin.com/in/yann-metier-147706156/",
    },
    {
        icon: "facebook",
        title: "Facebook",
        value: "Yann Metier",
        subtitle: "Page professionnelle",
        url: "https://facebook.com/yann.metier",
    },
];

// Location information
const locationInfo = {
    title: "Ma localisation",
    address: "France - Toulouse",
    mapUrl: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d186973.25674053936!2d1.3628007068633672!3d43.60426024977977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12aebb6fec7552ff%3A0x406f69c2f411030!2sToulouse%2C%20France!5e0!3m2!1sen!2sfr!4v1641234567890",
};
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
    <!-- Schema.org Person données structurées -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Person",
            "@id": "https://creation-site-web.fr/contact",
            "name": "Yann Metier",
            "jobTitle": "Développeur Web Freelance",
            "description": "Développeur web freelance expert en React, Next.js et Expo. Création de sites internet professionnels et applications web sur-mesure.",
            "url": "https://creation-site-web.fr",
            "image": "https://creation-site-web.fr/yann-metier-developer.jpg",
            "email": "metier.yann@gmail.com",
            "telephone": "+33752040771",
            "address": {
                "@type": "PostalAddress",
                "addressCountry": "FR",
                "addressLocality": "Toulouse",
                "addressRegion": "Occitanie"
            },
            "sameAs": [
                "https://www.linkedin.com/in/yann-metier-147706156/",
                "https://facebook.com/yann.metier"
            ],
            "knowsAbout": [
                "Développement Web",
                "React",
                "Next.js",
                "Expo",
                "JavaScript",
                "TypeScript",
                "Création Sites Internet"
            ],
            "offers": {
                "@type": "Offer",
                "itemOffered": {
                    "@type": "Service",
                    "name": "Création Site Internet",
                    "description": "Développement de sites web professionnels sur-mesure"
                },
                "areaServed": {
                    "@type": "Country",
                    "name": "France"
                }
            }
        }
    </script>
    <!-- Hero Section -->
    <section class="pt-20" aria-labelledby="contact-hero-heading" role="banner">
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <header class="text-center mb-12">
                <h1
                    id="contact-hero-heading"
                    class="font-bold text-4xl md:text-5xl text-foreground mb-6 leading-tight"
                >
                    Contactez-moi
                </h1>
                <p
                    class="text-muted-foreground text-lg max-w-3xl mx-auto leading-relaxed"
                >
                    Je serais ravi de <strong>répondre à vos questions</strong> et
                    de discuter de votre de site internet. <br />Même si nous ne
                    collaborons pas directement, je reste disponible pour vous <strong
                        >accompagner et vous orienter</strong
                    > dans vos questionnements.
                </p>
            </header>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-4" aria-labelledby="contact-info-heading">
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <header class="text-center mb-8">
                <h2
                    id="contact-info-heading"
                    class="font-bold text-2xl text-foreground mb-2"
                >
                    Mes coordonnées
                </h2>
                <p class="text-muted-foreground text-md">
                    Plusieurs moyens de me contacter pour votre projet :
                </p>
            </header>

            <!-- Contact Info -->

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8" role="list">
                {
                    contactInfo.map((info, index) => (
                        <article
                            class="border border-border/20 rounded-3xl bg-card/60 backdrop-blur-lg"
                            role="listitem"
                        >
                            <div class="p-6">
                                <div class="flex items-start space-x-4">
                                    <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center flex-shrink-0 organic-shape">
                                        {info.icon === "phone" && (
                                            <svg
                                                class="w-6 h-6 text-white"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" />
                                            </svg>
                                        )}
                                        {info.icon === "mail" && (
                                            <svg
                                                class="w-6 h-6 text-white"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <rect
                                                    width="20"
                                                    height="16"
                                                    x="2"
                                                    y="4"
                                                    rx="2"
                                                />
                                                <path d="m22 7-10 5L2 7" />
                                            </svg>
                                        )}
                                        {info.icon === "linkedin" && (
                                            <svg
                                                class="w-6 h-6 text-white"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                                                <rect
                                                    width="4"
                                                    height="12"
                                                    x="2"
                                                    y="9"
                                                />
                                                <circle cx="4" cy="4" r="2" />
                                            </svg>
                                        )}
                                        {info.icon === "facebook" && (
                                            <svg
                                                class="w-6 h-6 text-white"
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                aria-hidden="true"
                                            >
                                                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                                            </svg>
                                        )}
                                    </div>
                                    <div>
                                        <h3 class="font-medium text-foreground mb-1 flex items-center">
                                            {info.title}
                                        </h3>
                                        {info.url ? (
                                            <a
                                                href={info.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="text-primary hover:text-primary/80 transition-colors underline"
                                            >
                                                {info.value}
                                            </a>
                                        ) : (
                                            <p class="text-muted-foreground">
                                                {info.value}
                                            </p>
                                        )}
                                        <p class="text-sm text-muted-foreground mt-1">
                                            {info.subtitle}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Location Section -->
    <section
        class="py-10 mt-8 bg-card/60 rounded-2xl mb-16"
        aria-labelledby="location-heading"
    >
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <header class="text-center mb-8">
                <h2
                    id="location-heading"
                    class="font-bold text-3xl text-foreground mb-2"
                >
                    {locationInfo.title}
                </h2>
                <p class="text-muted-foreground text-lg">
                    Développeur web basé en France
                </p>
            </header>

            <div class="max-w-4xl mx-auto">
                <article
                    class="border border-border/20 rounded-3xl bg-card backdrop-blur-lg overflow-hidden"
                >
                    <div class="p-8 pb-2">
                        <h3
                            class="font-bold text-xl text-foreground mb-4 flex items-center"
                        >
                            <svg
                                class="w-6 h-6 mr-3 text-primary flex-shrink-0"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                aria-hidden="true"
                            >
                                <path
                                    d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                ></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            {locationInfo.address}
                            <span
                                class="ml-2 text-2xl"
                                aria-label="Drapeau France">🇫🇷</span
                            >
                        </h3>
                    </div>

                    <div class="px-8 pb-8">
                        <div
                            class="aspect-[16/10] rounded-2xl overflow-hidden border border-border/20 bg-gradient-to-br from-primary/5 to-secondary/5"
                        >
                            <iframe
                                src={locationInfo.mapUrl}
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                title="Carte Google Maps - France"
                                aria-label="Localisation en France"></iframe>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
</Layout>
