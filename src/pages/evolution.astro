---
import Layout from "@/layouts/layout.astro";
import { Zap, TrendingUp, Settings, DollarSign, Lightbulb, AlertTriangle, CheckCircle, ArrowRight } from "lucide-react";

// Page SEO data
const pageData = {
    title: "Évolution du Web - L'IA Révolutionne la Création de Sites Internet",
    description:
        "Découvrez comment l'intelligence artificielle transforme la création de sites web. Performance, SEO et personnalisation : l'évolution des prix et technologies.",
    keywords:
        "évolution web, IA création site internet, WordPress vs IA, Wix vs développement moderne, performance web, SEO intelligence artificielle, prix sites web évolution",
};


// Performance comparison data
const performanceData = [
    {
        metric: "Temps de chargement",
        before: "5.2s",
        after: "0.8s",
        improvement: "84% plus rapide",
        icon: "zap",
    },
    {
        metric: "Score SEO",
        before: "68/100",
        after: "96/100",
        improvement: "+41% d'amélioration",
        icon: "trending-up",
    },
    {
        metric: "Personnalisation",
        before: "Limitée",
        after: "Totale",
        improvement: "100% flexible",
        icon: "settings",
    },
    {
        metric: "Coût à long terme",
        before: "200€/mois",
        after: "0€/mois",
        improvement: "100% d'économies récurrentes",
        icon: "dollar-sign",
    },
];
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
    <!-- Schema.org Article données structurées -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Article",
            "@id": "https://prix-site-internet.fr/evolution",
            "headline": "L'Évolution du Web : Comment l'IA Révolutionne la Création de Sites Internet",
            "description": "Découvrez comment l'intelligence artificielle transforme la création de sites web. Performance, SEO et personnalisation : l'évolution des prix et technologies.",
            "author": {
                "@type": "Person",
                "name": "Yann Metier",
                "jobTitle": "Développeur Web Expert IA"
            },
            "publisher": {
                "@type": "Organization",
                "name": "Yann Metier Web Development",
                "url": "https://prix-site-internet.fr"
            },
            "datePublished": "2025-01-15",
            "dateModified": "2025-01-15",
            "mainEntityOfPage": "https://prix-site-internet.fr/evolution",
            "keywords": [
                "évolution web",
                "intelligence artificielle",
                "WordPress vs IA",
                "performance web",
                "SEO moderne",
                "prix sites web"
            ],
            "about": [
                {
                    "@type": "Thing",
                    "name": "Évolution technologique web",
                    "description": "Transformation de l'industrie web avec l'IA"
                },
                {
                    "@type": "Thing",
                    "name": "Performance web",
                    "description": "Amélioration des temps de chargement et du SEO"
                }
            ]
        }
    </script>

    <main>
        <!-- Hero Section -->
        <section
            class="pt-20"
            aria-labelledby="evolution-hero-heading"
            role="banner"
        >
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <header class="text-center mb-16">
                <h1
                    id="evolution-hero-heading"
                    class="font-bold text-4xl md:text-6xl text-foreground mb-6 leading-tight"
                >
                    L'évolution du <span class="text-primary">Web</span>
                </h1>
                <p
                    class="text-muted-foreground text-xl max-w-4xl mx-auto leading-relaxed"
                >
                    L'<strong>intelligence artificielle</strong> révolutionne la
                    création de sites internet. Fini les limitations des générateurs
                    de contenus comme WordPress ou Wix... place à la <strong
                        >performance</strong
                    >, la <strong>personnalisation totale</strong> et un <strong
                        >référencement exceptionnel</strong
                    >.
                </p>
            </header>
        </div>
    </section>

    <!-- Section 1: Pricing Evolution -->
    <section class="py-16" aria-labelledby="pricing-evolution-heading">
        <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16">
            <header class="text-center mb-16">
                <h2
                    id="pricing-evolution-heading"
                    class="font-bold text-3xl md:text-4xl text-foreground mb-6"
                >
                    Les règles du jeu ont <span class="text-primary"
                        >changé</span
                    >
                </h2>
                <div class="max-w-4xl mx-auto">
                    <p
                        class="text-muted-foreground text-lg mb-8 leading-relaxed"
                    >
                        Avant, créer un site en quelques jours signifiait
                        compromis sur la qualité. Aujourd'hui, mes outils ont
                        évolué et changent la donne : vitesse, performance et
                        sur-mesure à prix compétitif.
                    </p>

                    <!-- Personal Story Section -->
                    <div
                        class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-3xl p-8 mb-8 text-left"
                    >
                        <div class="flex items-center gap-4 mb-6">
                            <div
                                class="w-16 h-16 bg-blue-500 rounded-2xl flex items-center justify-center flex-shrink-0"
                            >
                                <Zap className="w-8 h-8 text-white" />
                            </div>
                            <div>
                                <h3
                                    class="font-bold text-xl text-blue-900 mb-1"
                                >
                                    Ma vision du changement
                                </h3>
                                <p class="text-blue-800 text-sm opacity-80">
                                    Yann Metier, développeur digital
                                </p>
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-8">
                            <!-- Before -->
                            <div class="space-y-4">
                                <div class="flex items-center gap-3 mb-4">
                                    <div
                                        class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center"
                                    >
                                        <AlertTriangle className="w-4 h-4 text-red-600" />
                                    </div>
                                    <h4 class="font-semibold text-red-800">
                                        <span role="img" aria-label="Horloge">⏰</span> Hier : le dilemme de la vitesse a un faible prix de développement
                                    </h4>
                                </div>
                                <div
                                    class="pl-11 space-y-3 text-sm text-blue-700"
                                >
                                    <p class="flex items-center gap-2">
                                        <span class="text-red-500">•</span>
                                        <span
                                            >Créer rapidement = utiliser des <strong
                                                >CMS lourds</strong
                                            ></span
                                        >
                                    </p>
                                    <p class="flex items-center gap-2">
                                        <span class="text-red-500">•</span>
                                        <span
                                            >Solutions <strong
                                                >trop complexes</strong
                                            > pour des sites simples</span
                                        >
                                    </p>
                                    <p class="flex items-center gap-2">
                                        <span class="text-red-500">•</span>
                                        <span
                                            >Compromis obligatoire : <strong
                                                >vitesse vs qualité</strong
                                            ></span
                                        >
                                    </p>
                                    <p class="flex items-center gap-2">
                                        <span class="text-red-500">•</span>
                                        <span
                                            >Pression de la <strong
                                                >compétitivité</strong
                                            ></span
                                        >
                                    </p>
                                </div>
                            </div>

                            <!-- After -->
                            <div class="space-y-4">
                                <div class="flex items-center gap-3 mb-4">
                                    <div
                                        class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center"
                                    >
                                        <CheckCircle className="w-4 h-4 text-green-600" />
                                    </div>
                                    <h4 class="font-semibold text-green-800">
                                        <span role="img" aria-label="Fusée">🚀</span> Aujourd'hui : l'IA
                                    </h4>
                                </div>
                                <div
                                    class="pl-11 space-y-3 text-sm text-blue-700"
                                >
                                    <p class="flex items-start gap-2">
                                        <span class="text-green-500">•</span>
                                        <span
                                            ><strong>Aussi rapide</strong>,
                                            voire plus qu'avant</span
                                        >
                                    </p>
                                    <p class="flex items-start gap-2">
                                        <span class="text-green-500">•</span>
                                        <span
                                            ><strong>Tarifs compétitifs</strong>
                                            alignés sur votre budget</span
                                        >
                                    </p>
                                    <p class="flex items-start gap-2">
                                        <span class="text-green-500">•</span>
                                        <span
                                            >Façonnage <strong
                                                >ligne de code par ligne</strong
                                            ></span
                                        >
                                    </p>
                                    <p class="flex items-start gap-2">
                                        <span class="text-green-500">•</span>
                                        <span
                                            ><strong>Zéro dépendance</strong> aux
                                            outils de génération</span
                                        >
                                    </p>
                                    <p class="flex items-start gap-2">
                                        <span class="text-green-500">•</span>
                                        <span
                                            ><strong
                                                >Référencement excellent</strong
                                            > par conception</span
                                        >
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Key Insight -->
                        <div
                            class="mt-8 p-4 bg-blue-100/50 rounded-2xl border border-blue-200"
                        >
                            <div class="flex items-center gap-3 mb-2">
                                <Lightbulb className="w-5 h-5 text-blue-600" />
                                <h5 class="font-semibold text-blue-800">
                                    L'avantage concurrentiel
                                </h5>
                            </div>
                            <p
                                class="text-blue-700 text-sm leading-relaxed pl-8"
                            >
                                L'IA n'est plus un gadget, c'est devenu mon <strong
                                    >multiplicateur de force</strong
                                >. Elle me permet d'offrir du <strong
                                    >sur-mesure haut de gamme</strong
                                > avec la
                                <strong>rapidité d'exécution</strong> des solutions
                                standardisées, sans leurs <strong
                                    >limitations</strong
                                >.
                            </p>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Performance Comparison -->
            <div
                class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-3xl p-8"
                aria-labelledby="performance-heading"
            >
                <h2 id="performance-heading" class="font-bold text-2xl text-center text-foreground mb-8">
                    Performances du site actuel calculées par Google
                </h2>
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
                    role="list"
                >
                    {
                        performanceData.map((data) => (
                            <article class="bg-white rounded-2xl p-6 text-center shadow-lg" role="listitem">
                                <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
                                    {data.icon === "zap" && <Zap className="w-6 h-6 text-white" />}
                                    {data.icon === "trending-up" && <TrendingUp className="w-6 h-6 text-white" />}
                                    {data.icon === "settings" && <Settings className="w-6 h-6 text-white" />}
                                    {data.icon === "dollar-sign" && <DollarSign className="w-6 h-6 text-white" />}
                                </div>
                                <h3 class="font-semibold text-foreground mb-3">
                                    {data.metric}
                                </h3>
                                <div class="space-y-2">
                                    <div class="text-sm text-red-600 line-through">
                                        Avant : {data.before}
                                    </div>
                                    <div class="text-lg font-bold text-green-600">
                                        Maintenant : {data.after}
                                    </div>
                                    <div class="text-sm font-medium text-primary">
                                        {data.improvement}
                                    </div>
                                </div>
                            </article>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

        <!-- Call to Action -->
        <section class="py-16 bg-primary/5 rounded-3xl mb-16" aria-labelledby="cta-heading">
        <div class="max-w-4xl mx-auto text-center px-8 sm:px-12 lg:px-16">
            <h2 id="cta-heading" class="font-bold text-3xl text-foreground mb-6">
                Prêt à faire le saut technologique ?
            </h2>
            <p class="text-muted-foreground text-lg mb-8 leading-relaxed">
                L'intelligence artificielle permet aujourd'hui de créer des sites web <strong
                    >ultra-performants</strong
                >,
                <strong>parfaitement optimisés</strong> et <strong
                    >économiquement avantageux</strong
                >
                à long terme.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/contact"
                    class="inline-flex items-center px-8 py-4 bg-primary text-white font-medium rounded-2xl hover:bg-primary/90 transition-colors"
                >
                    Découvrir mes tarifs
                    <ArrowRight className="ml-2 w-5 h-5" />
                </a>
            </div>
        </div>
        </section>
    </main>
</Layout>
