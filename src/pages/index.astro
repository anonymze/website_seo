---
import Layout from "@/layouts/layout.astro";
import {
    ArrowRightIcon,
    BuildingIcon,
    CodeIcon,
    GlobeIcon,
    SearchIcon,
    ShieldIcon,
    ShoppingCartIcon,
    SmartphoneIcon,
    UsersIcon,
    ZapIcon,
} from "lucide-react";
---

<Layout
    title="Création Site Internet Professionnel | Devis Gratuit & Créer Site Web"
    description="Création de site internet professionnel. Devis gratuit en 24h pour créer votre site web moderne, rapide et visible sur Google. Expert création site internet France."
    keywords="création site internet, devis site internet, créer site internet, créer site web, site internet professionnel, creation site web, faire un site internet, prix site internet, créateur site internet France"
>
    <main role="main" id="main-content">
        <section
            class="text-center py-20"
            itemscope
            itemtype="https://schema.org/WebPageElement"
        >
            <h1
                class="font-bold text-4xl md:text-6xl text-balance"
                itemprop="headline"
            >
                Création site internet <span class="text-primary"
                    >professionnel</span
                >
            </h1>
            <p
                class="text-lg md:text-xl py-4 max-w-3xl mx-auto text-pretty"
                itemprop="description"
            >
                Expert en création de site internet. Je transforme vos idées en
                sites web modernes, rapides et référencés. Devis gratuit
                personnalisé.
            </p>

            <div
                class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8"
            >
                <a
                    href="/contact"
                    class="inline-flex items-center hover:bg-primary/90 text-primary-foreground bg-primary rounded-lg px-8 py-3 shadow-lg hover:shadow-xl transition-all duration-300  hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 group text-lg"
                    title="Obtenir un devis gratuit pour création site internet"
                    aria-label="Demander un devis gratuit personnalisé pour la création de votre site internet professionnel"
                    itemprop="potentialAction"
                    itemscope
                    itemtype="https://schema.org/ContactAction"
                >
                    <span itemprop="name">Obtenir un devis gratuit</span>
                    <ArrowRightIcon
                        className="size-5 ml-2 transition-transform duration-300 group-hover:translate-x-1"
                    />
                </a>
                <a
                    href="/portfolio"
                    class="inline-flex items-center text-foreground hover:text-primary rounded-lg px-8 py-3 shadow-md hover:shadow-lg transition-all duration-300  hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-border hover:border-primary text-lg"
                    title="Portfolio sites internet créés - Exemples de réalisations professionnelles"
                    aria-label="Découvrir mes réalisations de sites internet professionnels et projets web"
                >
                    Voir mes réalisations
                </a>
            </div>

            <section
                class="flex gap-6 items-center justify-center mt-20 md:flex-row flex-col"
                aria-labelledby="services-heading"
                itemscope
                itemtype="https://schema.org/ItemList"
            >
                <h2 id="services-heading" class="sr-only">
                    Nos services de création de sites internet
                </h2>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <CodeIcon className="text-primary" aria-hidden="true" />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        Développement Web Sur-Mesure
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Sites web uniques adaptés à vos besoins et à votre image
                        de marque
                    </p>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <SmartphoneIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        Design Responsive
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Parfaitement optimisé pour tous les appareils et
                        plateformes
                    </p>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <SearchIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        Référencement SEO Avancé
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Référencement optimisé pour une visibilité maximale et
                        rapide sur Google
                    </p>
                </article>
            </section>

            <div
                class="bg-blue-50 border border-blue-200 rounded-lg p-6 mx-auto mt-10 mb-8 w-full"
            >
                <h2 class="text-xl font-bold text-blue-900 mb-3 text-center">
                    Développement à la main de A à Z
                </h2>
                <p class="text-blue-800 text-center text-sm">
                    Contrairement aux générateurs de sites (WordPress, Wix,
                    Squarespace...), chaque site est <strong
                        >codé entièrement à la main</strong
                    > selon vos besoins précis. <br /> Résultat : performances optimales,
                    customisation à 100% et référencement naturel supérieur.
                </p>
            </div>
        </section>

        <!-- services -->
        <section
            class="mb-20 text-center"
            aria-labelledby="services-heading"
            itemscope
            itemtype="https://schema.org/ItemList"
            id="services-creation-site-internet"
        >
            <h2
                id="services-heading"
                class="font-bold text-4xl text-balance"
                itemprop="name"
            >
                Services création site internet professionnel
            </h2>
            <p
                class="text-lg md:text-xl py-4 max-w-3xl mx-auto text-pretty"
                itemprop="description"
            >
                Solutions web complètes sur-mesure : site vitrine, e-commerce et
                corporate. Développement professionnel avec référencement SEO
                inclus et design responsive.
            </p>

            <div
                class="flex gap-6 items-center justify-center md:flex-row flex-col mt-10"
            >
                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <BuildingIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        Site Corporate
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Site web d'entreprise avec fonctionnalités avancées et
                        espace client
                    </p>

                    <ul
                        class="text-left mt-6 pl-4 list-disc marker:text-primary"
                    >
                        <li class="text-sm my-2">Multi-pages</li>
                        <li class="text-sm my-2">Espace membre</li>
                        <li class="text-sm my-2">Contenu dynamique</li>
                        <li class="text-sm my-2">Outil de gestion</li>
                    </ul>

                    <hr class="my-6" />

                    <p class="text-left font-bold text-2xl text-primary mb-3">
                        À partir de 1200 €
                    </p>

                    <a
                        href="/portfolio"
                        class="inline-flex items-center justify-center text-foreground hover:text-primary rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-all duration-300  focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-border hover:border-primary"
                        title="Portfolio sites internet créés - Exemples de réalisations professionnelles"
                        aria-label="Découvrir mes réalisations de sites internet professionnels et projets web"
                    >
                        Demander un devis
                    </a>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full border-2 border-primary relative"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <span
                        class="absolute -top-3 left-1/2 -translate-x-1/2 text-xs font-semibold text-white bg-primary rounded-full px-2 py-1"
                        >Populaire</span
                    >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <GlobeIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        Site Vitrine
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Site web professionnel pour présenter votre entreprise
                        et vos services
                    </p>

                    <ul
                        class="text-left mt-6 pl-4 list-disc marker:text-primary"
                    >
                        <li class="text-sm my-2">Pages essentielles</li>
                        <li class="text-sm my-2">Référencement optimal</li>
                        <li class="text-sm my-2">Design moderne</li>
                        <li class="text-sm my-2">Formulaire de contact</li>
                    </ul>

                    <hr class="my-6" />

                    <p class="text-left font-bold text-2xl text-primary mb-3">
                        À partir de 700€
                    </p>

                    <a
                        href="/portfolio"
                        class="inline-flex items-center justify-center bg-primary hover:bg-primary/90 text-white rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-background duration-300  focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-primary"
                        title="Portfolio sites internet créés - Exemples de réalisations professionnelles"
                        aria-label="Découvrir mes réalisations de sites internet professionnels et projets web"
                    >
                        Demander un devis
                    </a>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                    itemscope
                    itemtype="https://schema.org/Service"
                    itemprop="itemListElement"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <ShoppingCartIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold" itemprop="name">
                        E-commerce
                    </h3>
                    <p class="text-sm" itemprop="description">
                        Boutique en ligne complète pour vendre vos produits sur
                        internet
                    </p>

                    <ul
                        class="text-left mt-6 pl-4 list-disc marker:text-primary"
                    >
                        <li class="text-sm my-2">Panier & paiement sécurisé</li>
                        <li class="text-sm my-2">Référencement optimal</li>
                        <li class="text-sm my-2">
                            Outil de gestion de produits
                            <li class="text-sm my-2">Gestion des commandes</li>
                        </li>
                    </ul>

                    <hr class="my-6" />

                    <p class="text-left font-bold text-2xl text-primary mb-3">
                        À partir de 1500€
                    </p>

                    <a
                        href="/portfolio"
                        class="inline-flex items-center justify-center text-foreground hover:text-primary rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-all duration-300  focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-border hover:border-primary"
                        title="Portfolio sites internet créés - Exemples de réalisations professionnelles"
                        aria-label="Découvrir mes réalisations de sites internet professionnels et projets web"
                    >
                        Demander un devis
                    </a>
                </article>
            </div>

            <!-- Services Complémentaires -->
            <div class="mt-20">
                <h3 class="font-bold text-2xl mb-8">
                    Services complémentaires
                </h3>

                <div
                    class="flex gap-6 items-center justify-center md:flex-row flex-col"
                >
                    <article
                        class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                        itemscope
                        itemtype="https://schema.org/Service"
                        itemprop="itemListElement"
                    >
                        <div
                            class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                        >
                            <ZapIcon
                                className="text-primary"
                                aria-hidden="true"
                            />
                        </div>
                        <h3 class="my-4 text-lg font-bold" itemprop="name">
                            Optimisation Performance
                        </h3>
                        <p class="text-sm" itemprop="description">
                            Amélioration de la vitesse et des performances de
                            votre site existant
                        </p>
                    </article>
                    <article
                        class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                        itemscope
                        itemtype="https://schema.org/Service"
                        itemprop="itemListElement"
                    >
                        <div
                            class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                        >
                            <ShieldIcon
                                className="text-primary"
                                aria-hidden="true"
                            />
                        </div>
                        <h3 class="my-4 text-lg font-bold" itemprop="name">
                            Maintenance & Sécurité
                        </h3>
                        <p class="text-sm" itemprop="description">
                            Maintenance régulière et sécurisation de votre site
                            web
                        </p>
                    </article>
                    <article
                        class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                        itemscope
                        itemtype="https://schema.org/Service"
                        itemprop="itemListElement"
                    >
                        <div
                            class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                        >
                            <UsersIcon
                                className="text-primary"
                                aria-hidden="true"
                            />
                        </div>
                        <h3 class="my-4 text-lg font-bold" itemprop="name">
                            Formation
                        </h3>
                        <p class="text-sm" itemprop="description">
                            Formation pour gérer et mettre à jour votre site en
                            autonomie
                        </p>
                    </article>
                </div>
            </div>
        </section>
    </main>
</Layout>
