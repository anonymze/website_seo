---
import Layout from "@/layouts/layout.astro";
import {
    ArrowRightIcon,
    BuildingIcon,
    CodeIcon,
    GlobeIcon,
    SearchIcon,
    ShieldIcon,
    ShoppingCartIcon,
    SmartphoneIcon,
    UsersIcon,
    ZapIcon,
} from "lucide-react";
---

<Layout
    title="Création Site Internet Professionnel | Devis Gratuit"
    description="Expert création site internet professionnel. Devis gratuit en 24h pour créer votre site web moderne, rapide et visible sur Google. Développement web sur-mesure France."
    keywords="création site internet, site internet professionnel, développeur web, devis site web, créer site internet, développement web sur-mesure, référencement SEO, site responsive France"
>
    <!-- Schema.org données structurées -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "LocalBusiness",
            "@id": "https://creation-site-web.fr",
            "name": "Expert Création Site Internet",
            "description": "Expert en création de sites internet professionnels. Développement web sur-mesure avec référencement SEO inclus.",
            "url": "https://creation-site-web.fr",
            "sameAs": [],
            "address": {
                "@type": "PostalAddress",
                "addressCountry": "FR",
                "addressRegion": "France"
            },
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": "46.2276",
                "longitude": "2.2137"
            },
            "areaServed": {
                "@type": "Country",
                "name": "France"
            },
            "priceRange": "€€",
            "offers": [
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Site Vitrine",
                        "description": "Site web professionnel pour présenter votre entreprise"
                    },
                    "price": "700",
                    "priceCurrency": "EUR",
                    "priceSpecification": {
                        "@type": "PriceSpecification",
                        "price": "700",
                        "priceCurrency": "EUR",
                        "valueAddedTaxIncluded": false
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "Site Corporate",
                        "description": "Site web d'entreprise avec fonctionnalités avancées"
                    },
                    "price": "1300",
                    "priceCurrency": "EUR",
                    "priceSpecification": {
                        "@type": "PriceSpecification",
                        "price": "1300",
                        "priceCurrency": "EUR",
                        "valueAddedTaxIncluded": false
                    }
                },
                {
                    "@type": "Offer",
                    "itemOffered": {
                        "@type": "Service",
                        "name": "E-commerce",
                        "description": "Boutique en ligne complète"
                    },
                    "price": "1900",
                    "priceCurrency": "EUR",
                    "priceSpecification": {
                        "@type": "PriceSpecification",
                        "price": "1900",
                        "priceCurrency": "EUR",
                        "valueAddedTaxIncluded": false
                    }
                }
            ],
            "serviceType": "Création site internet",
            "provider": {
                "@type": "Organization",
                "name": "Expert Création Site Internet"
            }
        }
    </script>
    <section
        class="text-center py-20"
    >
        <h1
            class="font-bold text-4xl md:text-6xl text-balance"
        >
            Création site internet <span class="text-primary"
                >professionnel</span
            >
        </h1>
        <p
            class="text-lg md:text-xl py-4 max-w-3xl mx-auto text-pretty"
        >
            Expert en création de présence digitale. Je transforme vos idées en
            sites web modernes, rapides et référencés. Devis gratuit et
            personnalisé.
        </p>

        <div
            class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-6"
        >
            <a
                href="/services"
                class="inline-flex items-center hover:bg-primary/90 text-primary-foreground bg-primary rounded-lg px-8 py-3 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 group text-lg"
                title="Obtenir un devis gratuit pour création site internet"
            >
                <span>Obtenir un devis gratuit</span>
                <ArrowRightIcon
                    className="size-5 ml-2 transition-transform duration-300 group-hover:translate-x-1"
                />
            </a>
        </div>
        <p
            class="mt-14 text-lg md:text-xl pt-4 max-w-3xl mx-auto text-pretty font-medium"
        >
            Vous avez des doutes sur l'efficacité de votre plateforme internet ?
        </p>

        <p class="mb-6 mt-1 text-sm text-muted-foreground max-w-2xl mx-auto text-center">
            Insérer votre URL après avoir cliqué sur le lien pour analyser votre plateforme.
        </p>

        <a
            href="https://pagespeed.web.dev/"
            target="_blank"
            rel="noopener noreferrer"
            class="google-score-btn inline-flex items-center text-foreground rounded-lg px-8 py-3 shadow-md hover:shadow-lg transition-all duration-300 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 text-lg relative"
            title="Tester votre site avec PageSpeed Insights de Google"
        >
            Vérifier le score Google de votre site
        </a>

        <section
            class="mt-20"
            aria-labelledby="hero-services-heading"
        >
            <h2
                id="hero-services-heading"
                class="text-2xl font-bold mb-8 text-center w-full"
            >
                Expertise développement web
            </h2>

            <div
                class="flex gap-6 items-center justify-center md:flex-row flex-col"
            >
                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <CodeIcon className="text-primary" aria-hidden="true" />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Développement Web Sur-Mesure
                    </h3>
                    <p class="text-sm">
                        Sites web uniques adaptés à vos besoins et à votre image
                        de marque
                    </p>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <SmartphoneIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Design Responsive
                    </h3>
                    <p class="text-sm">
                        Parfaitement optimisé pour tous les appareils et
                        plateformes
                    </p>
                </article>

                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <SearchIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Référencement SEO Avancé
                    </h3>
                    <p class="text-sm">
                        Référencement optimisé pour une visibilité maximale et
                        rapide sur Google
                    </p>
                </article>
            </div>
        </section>

        <div
            class="bg-blue-50 border border-blue-200 rounded-lg p-6 mx-auto mt-10 mb-8 w-full"
        >
            <h3 class="text-xl font-bold text-blue-900 mb-3 text-center">
                Développement à la main de A à Z
            </h3>
            <p class="text-blue-800 text-center text-sm">
                Contrairement aux générateurs de sites (WordPress, Wix,
                Squarespace...), chaque site est <strong
                    >codé entièrement à la main</strong
                > selon vos besoins précis. <br /> Résultat : performances optimales,
                customisation à 100% et référencement naturel supérieur.
            </p>
        </div>
    </section>

    <!-- services -->
    <section
        class="mb-20 text-center"
        aria-labelledby="main-services-heading"
        id="services-creation-site-internet"
    >
        <h2
            id="main-services-heading"
            class="font-bold text-3xl text-balance"
        >
            Services création site internet professionnel
        </h2>
        <p
            class="text-lg md:text-xl py-4 max-w-3xl mx-auto text-pretty"
        >
            Solutions web complètes sur-mesure : site vitrine, e-commerce et
            corporate. Développement professionnel avec référencement SEO inclus
            et design responsive.
        </p>

        <div
            class="flex gap-6 items-center justify-center md:flex-row flex-col mt-10"
        >
            <article
                class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
            >
                <div
                    class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                >
                    <BuildingIcon className="text-primary" aria-hidden="true" />
                </div>
                <h3 class="my-4 text-lg font-bold">
                    Site Corporate
                </h3>
                <p class="text-sm">
                    Site web d'entreprise avec fonctionnalités avancées et
                    espace client
                </p>

                <ul class="text-left mt-6 pl-4 list-disc marker:text-primary">
                    <li class="text-sm my-2">Multi-pages</li>
                    <li class="text-sm my-2">Espace membre</li>
                    <li class="text-sm my-2">Contenu dynamique</li>
                    <li class="text-sm my-2">Outil de gestion</li>
                </ul>

                <hr class="my-6" />

                <p class="text-left font-bold text-2xl text-primary mb-3">
                    À partir de 1300 €
                </p>

                <a
                    href="/services"
                    class="inline-flex items-center justify-center text-foreground hover:text-primary rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-border hover:border-primary"
                    title="Demander un devis pour site corporate"
                >
                    Demander un devis
                </a>
            </article>

            <article
                class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full border-2 border-primary relative"
            >
                <span
                    class="absolute -top-3 left-1/2 -translate-x-1/2 text-xs font-semibold text-white bg-primary rounded-full px-2 py-1"
                    >Populaire</span
                >
                <div
                    class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                >
                    <GlobeIcon className="text-primary" aria-hidden="true" />
                </div>
                <h3 class="my-4 text-lg font-bold">
                    Site Vitrine
                </h3>
                <p class="text-sm">
                    Site web professionnel pour présenter votre entreprise et
                    vos services
                </p>

                <ul class="text-left mt-6 pl-4 list-disc marker:text-primary">
                    <li class="text-sm my-2">Pages essentielles</li>
                    <li class="text-sm my-2">Référencement optimal</li>
                    <li class="text-sm my-2">Design moderne</li>
                    <li class="text-sm my-2">Formulaire de contact</li>
                </ul>

                <hr class="my-6" />

                <p class="text-left font-bold text-2xl text-primary mb-3">
                    À partir de 700€
                </p>

                <a
                    href="/services"
                    class="inline-flex items-center justify-center bg-primary hover:bg-primary/90 text-white rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-background duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-primary"
                    title="Demander un devis pour site vitrine"
                >
                    Demander un devis
                </a>
            </article>

            <article
                class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
            >
                <div
                    class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                >
                    <ShoppingCartIcon
                        className="text-primary"
                        aria-hidden="true"
                    />
                </div>
                <h3 class="my-4 text-lg font-bold">
                    E-commerce
                </h3>
                <p class="text-sm">
                    Boutique en ligne complète pour vendre vos produits sur
                    internet
                </p>

                <ul class="text-left mt-6 pl-4 list-disc marker:text-primary">
                    <li class="text-sm my-2">Panier & paiement sécurisé</li>
                    <li class="text-sm my-2">Référencement optimal</li>
                    <li class="text-sm my-2">Outil de gestion de produits</li>
                    <li class="text-sm my-2">Gestion des commandes</li>
                </ul>

                <hr class="my-6" />

                <p class="text-left font-bold text-2xl text-primary mb-3">
                    À partir de 1900€
                </p>

                <a
                    href="/services"
                    class="inline-flex items-center justify-center text-foreground hover:text-primary rounded-lg py-1.5 w-full text-sm shadow-md hover:shadow-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 border border-border hover:border-primary"
                    title="Demander un devis pour boutique e-commerce"
                >
                    Demander un devis
                </a>
            </article>
        </div>

        <!-- Services Complémentaires -->
        <div class="mt-20">
            <h3 class="font-bold text-2xl mb-8">Services complémentaires</h3>

            <div
                class="flex gap-6 items-center justify-center md:flex-row flex-col"
            >
                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <ZapIcon className="text-primary" aria-hidden="true" />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Optimisation Performance
                    </h3>
                    <p class="text-sm">
                        Amélioration de la vitesse et des performances de votre
                        plateforme existante
                    </p>
                </article>
                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <ShieldIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Maintenance & Sécurité
                    </h3>
                    <p class="text-sm">
                        Maintenance régulière et sécurisation de votre espace digitale
                    </p>
                </article>
                <article
                    class="bg-gray-100 rounded-lg p-6 text-center flex-1 w-full"
                >
                    <div
                        class="size-12 flex items-center justify-center bg-gray-200 mx-auto rounded-lg"
                    >
                        <UsersIcon
                            className="text-primary"
                            aria-hidden="true"
                        />
                    </div>
                    <h3 class="my-4 text-lg font-bold">
                        Formation
                    </h3>
                    <p class="text-sm">
                        Formation pour gérer et mettre à jour votre site en
                        autonomie
                    </p>
                </article>
            </div>
        </div>
    </section>
</Layout>

<style>
    .google-score-btn {
        position: relative;
        overflow: hidden;
    }

    .google-score-btn::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(
            transparent,
            transparent,
            #4285f4,
            #ea4335,
            #fbbc04,
            #34a853,
            transparent,
            transparent
        );
        animation: rotate-shimmer 4s linear infinite;
        z-index: -1;
    }

    .google-score-btn::after {
        content: '';
        position: absolute;
        inset: 2px;
        background: white;
        border-radius: 6px;
        z-index: -1;
    }

    @keyframes rotate-shimmer {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    .google-score-btn:hover::before {
        background: linear-gradient(
            90deg,
            #fbbc04 0%,
            #4285f4 25%,
            #ea4335 50%,
            #34a853 75%,
            #4285f4 100%
        );
        animation: none;
    }
</style>
