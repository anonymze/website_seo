---
import Layout from "@/layouts/layout.astro";

const pageData = {
  title: "404 - Page introuvable | Kinesiologue",
  description: "La page que vous recherchez n'existe pas. Retournez à l'accueil pour découvrir nos services de kinésiologie.",
  keywords: "404, page introuvable, kinesiologue, erreur"
};
---

<Layout
    title={pageData.title}
    description={pageData.description}
    keywords={pageData.keywords}
    type="website"
>
  <main class="my-24 flex items-center justify-center">
    <div class="max-w-md mx-auto text-center px-6">
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Oups ! Page introuvable</h2>
        <p class="text-gray-600 mb-8">
          La page que vous cherchez n'existe pas ou a été déplacée.
        </p>
      </div>

      <div class="space-y-4">
        <a
          href="/"
          class="inline-block bg-primary text-white px-6 py-3 rounded-lg font-medium hover:bg-primary/80 transition-colors"
        >
          Retour à l'accueil
        </a>

      </div>
    </div>
  </main>
</Layout>
